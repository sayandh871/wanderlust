<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  
  <!-- Page Heading -->
  <h1 class="col-6 offset-3">Login on Wanderlust</h1>
  
  <!-- Login form container -->
  <div class="col-6 offset-3">

    <!-- Login form -->
    <form action="/login" method="post" class="needs-validation" novalidate>
      
      <!-- Username input -->
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>
      
      <!-- Password input -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>

      <!-- Submit button -->
      <button class="btn btn-success">Login</button>
    </form>

  </div>
</div>
