<% layout("/layouts/boilerplate.ejs") %>
<script>
  let mapToken = "<%=process.env.MAP_TOKEN%>"
  let listing = <%- JSON.stringify(Listing) %>
</script>

<div class="row">
  <div class="col-8 offset-3 mt-3">
    
    <!-- Listing Details Heading -->
    <h3><%= Listing.title %></h3>
  
  </div>

  <!-- Main listing card -->
  <div class="card col-6 offset-3 show-card listing-card">
    <!-- Listing image -->
    <img src="<%= Listing.image.url %>" class="card-img-top show-img" alt="Listing_image">
    
    <!-- Listing information -->
    <div class="card-body">
      <p class="card-text">
        <!-- Owner username -->
        <%= Listing.owner.username %> <br>

        <!-- Description -->
        <%= Listing.description %> <br>

        <!-- Price (formatted in INR with commas) -->
        &#8377;<%= Listing.price.toLocaleString("en-IN") %> <br>

        <!-- Location -->
        <%= Listing.location %> <br>

        <!-- Country -->
        <%= Listing.country %>
      </p>
    </div>
  </div>

  <!-- Action buttons -->
  <div class="btns offset-1">
    <!-- Edit listing link -->
    <a href="/listings/<%= Listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-2">Edit</a>

    <!-- Delete listing form -->
    <form action="/listings/<%= Listing._id %>?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>

  <!-- Review form (only for logged-in users) -->
  <div class="col-8 offset-3 mb-3 mt-3">
    <% if (currUser) { %>
      <h4>Leave a review</h4>

      <form action="/listings/<%= Listing._id %>/reviews" method="post" novalidate class="needs-validation">
        
        <!-- Rating input -->
        <div class="mb-3 mt-3">
          
          
        
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          </div>

        <!-- Comment textarea -->
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea 
            name="review[comment]" 
            id="comment" 
            cols="30" 
            rows="5" 
            class="form-control" 
            required
          ></textarea>
          <div class="invalid-feedback">Please add some comments</div>
        </div>

        <!-- Submit review -->
        <button class="btn btn-outline-dark">Submit</button>
      </form>
    <% } %>

    <!-- All reviews section -->
    <hr>
    <%if(Listing.reviews && Listing.reviews.length >0){%>
      <div class="row">
      <p><b>All reviews</b></p>
      <% for (review of Listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <!-- Review author -->
            <h5 class="card-title">@<%= review.author.username %></h5>
            <!-- Review rating -->
            <p class="card-text starability-result " data-rating="<%= review.rating %>"></p>

            <!-- Review comment -->
            <p class="card-text"><%= review.comment %></p>

            
          </div>

          <!-- Delete review form -->
          <form 
            method="post" 
            action="/listings/<%= Listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark mb-3">Delete</button>
          </form>
        </div>
      <% } %>
    </div>
    <%}%>
    
  </div>
  <div class="col-6 offset-3 mb-3 mt-3"><h3>where you'll be</h3>
  
 <div id="map">

 </div>
</div>
</div>
<script src="/js/map.js"></script>
